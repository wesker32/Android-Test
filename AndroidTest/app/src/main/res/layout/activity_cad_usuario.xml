<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cad_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.wi.androidtest.CadUsuarioActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            style="@style/NomeDosCampos"
            android:text="@string/usuario_txtNome"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usuario_edtNome"
            android:inputType="text"/>

        <TextView
            style="@style/NomeDosCampos"
            android:text="@string/usuario_txtLogin"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usuario_edtLogin"
            android:inputType="text"/>

        <TextView
            style="@style/NomeDosCampos"
            android:text="@string/usuario_txtSenha"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/usuario_edtSenha"
            android:inputType="textPassword" />

        <Button
            android:text="Cadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:padding="10dp"
            android:background="#333"
            android:textColor="#fff"/>


    </LinearLayout>

</ScrollView>
